{% extends 'EatSleepCodeAdminBundle::admin.html.twig' %}

{% block title %}Admin | Users{% endblock %}

{% block heading %}Users{% endblock %}

{% block content %}
    <ul>
        {% for user in users %}
            <li>{{ user.email }}{{ not user.enabled ? ' (DISABLED)' : '' }} -
                <a href="{{ path('user_edit', {id: user.id}) }}">Edit</a> |
                {% if user.enabled %}
                    <a href="{{ path('user_deactivate', { id: user.id}) }}">Deactivate</a>
                {% else %}
                    <a href="{{ path('user_activate', { id: user.id}) }}">Activate</a>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
{% endblock %}
